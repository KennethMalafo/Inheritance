package InheritancePackage;

public class MainClass {
    public static void main(String[] args) {

        // AdultPerson(String fullName, String address, String gender, String cNumber, int age)
        System.out.println("");
        AdultPerson Adult = new AdultPerson("Juan Mabaho","Urdaneta City", "Male", "0912356789", 60);
        Adult.Attributes();
        System.out.println("");

        // SeniorPerson(String fullName, String gender, String address, String cNumber, int age)
        SeniorPerson Senior = new SeniorPerson("Juan Mabaho", "Male", "Urdaneta City", "09123456789", 60);
        Senior.Attributes();
        System.out.println("");

        //EmployedPerson(String fullName, String gender, String address, String cNumber, int age, String empID,,String dept, String post, int rate, int salary)
        EmployedPerson Employee = new EmployedPerson("Donato Mabaho","Urdaneta City", "Male","09246810121", 30, "2022-0001", "IT", "Head Manager", 10, 100000 );
        Employee.Attributes();
        System.out.println("");

        //Toddler(String fName, String add, String gender, String cNumber, int age, int studentID, int GradeLevel)
        Toddler Toddler = new Toddler("Pedro Mabaho","Urdaneta City","Male","0913579111",6,123456789, 3);
        Toddler.Attributes();
        System.out.println("");
    }
}
